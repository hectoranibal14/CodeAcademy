<h3>Demand Form</h3>

<Form method="post" action="/demand/modify/<%=@current_demand.contact_id%>" class="form-control">

  <div class="form-group">
        <label for="number">Number</label>
        <input type="number" placeholder="<%= @current_demand.contact_id %>" class="form-control" readonly>
  </div>

  <div class="form-group">
    <label for="status">Status</label>
        <select name="status">
            <option>Abierto</option>
            <option>Cerrado</option>
        </select>
  </div>
  
  <div class="form-group">
      <label for="category">Category</label>
      <select name="category">
        <% @category.each do |category| %>
          <option value="<%= category.category %>"><%= category.category %></option>
        <% end %>
      </select>
  </div>

  <div class="form-group">
      <label for="type">Type</label>
      <select name="type">
        <% @type.each do |type| %>
          <option value="<%= type %>"><%= type %></option>
        <% end %>
      </select>
  </div>

  <div class="form-group">
    <label for="commune">Commune</label>
    <input type="text" name="commune" value="<%= @current_demand.cgpc_address %>">
  </div>

  <div class="form-group">
    <label for="distrit">Distrit</label>
    <input type="text" name="distrit" value="<%= @current_demand.distrit_address %>">
  </div>

  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address" value="<%= @current_demand.street_address %>">
  </div>

  <div class="form-group">
    <label for="address_number">Address number</label>
    <input type="text" name="address_number" value="<%= @current_demand.number_address %>">
  </div>

  <div class="form-group">
    <label for="channel">Channel</label>
    <select name="channel">
      <option>App</option>
      <option>Web</option>
      <option>147</option>
      <option>Commune</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="gender">Gender</label>
    <select name="gender">
      <option>femenino </option>
      <option>masculino</option>
      <option>otro</option>
    </select>
  </div>

  <div class="form-group">
    <label for="date">Open Date</label>
    <input type="number" placeholder="<%= @current_demand.entry_date %> - <%= @current_demand.entry_time %>" readonly>
  </div>

  <div class="form-group">
    <label for="close_date">Close Date</label>
    <input type="text" name="close_date" readonly>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>

<hr class="my-4">

<div class="row  justify-content">
  <div class="col-6" >
    <p><a class="btn btn-primary" href='/'>Back Home</a></p>
  </div>
</div>
