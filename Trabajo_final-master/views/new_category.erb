<div class="row  justify-content-center">
  <div class="col-6" >
    <% if @errors%>
      <% @errors.each do |error| %>
        <div class="alert alert-danger" role="alert">
          <%= error%>
        </div>
      <% end %>
    <% end %>
    <form class="form" action='/new_category' method='post'>
      <div class="form-group">
        <label for="shortName">Category Name</label>
        <input required type="text" class="form-control" name="new_category" aria-describedby="shortnameHelp" placeholder="">
        <small id="shortnameHelp" class="form-text text-muted">Category Name (Maximum 255 characters)</small>
      </div>
      
      <button type='submit' class='btn btn-primary'>Add Category</button>
    </form>
  </div>
</div>
<hr class="my-4">

<div class="row  justify-content">
  <div class="col-6" >
    <p><a class="btn btn-primary" href='/'>Back Home</a></p>
  </div>
</div>