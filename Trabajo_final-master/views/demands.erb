<div>
    <table class="table table-responsive">
      <thead>
        <th>Number</th>
        <th>Category</th>
        <th>State</th>
        <th>Open date</th>
        <th>Actions</th>
      </thead>
      <h10>
        <tbody>
            <% @demands.each do |demand| %>
                <tr>
                    <td><%= demand.contact_id %></td>
                    <td><%= demand.category %></td>
                    <td><%= demand.contact_id_state %></td>
                    <td><%= demand.entry_date %></td>
                    <%if demand.contact_id_state == "Abierto"%>
                        <td><a href="/demand/<%= demand.contact_id %>">Details</a> <a href="/demand/modify/<%= demand.contact_id %>">Modify</a> <a href="/demand/cancel/<%= demand.contact_id %>">Cancel</a></td>
                    <%else%>
                        <td><a href="/demand/<%= demand.contact_id %>">Details</a></td>
                    <%end%>

                </tr>
            <% end %>
        </tbody>
      </h10>
    </table>
  </div>
  <hr class="my-4">
  <div class="row  justify-content">
  <div class="col-6" >
    <p><a class="btn btn-primary" href='/'>Back Home</a></p>
  </div>
</div>