

<form method="post" action="/information/month" class="form-control">

  <div class="form-group">
      <label for="month">Enter the month to consult</label>
      <select name="month">
        <% @months.each do |month| %>
          <option value="<%= month %>"><%= month %></option>
        <% end %>
      </select>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<hr class="my-4">

<div class="row  justify-content">
  <div class="col-6" >
  <p><a class="btn btn-primary" href='/information'>Back to information</a></p>
  </div>
</div>