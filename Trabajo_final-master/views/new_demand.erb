<h3>New Demand Form</h3>

<Form method="post" action="/demand/new" class="form-control">

  <div class="form-group">
        <label for="number">Number</label>
        <input type="number" placeholder="<%= @new_contact_id %>">
  </div>

  <div class="form-group">
    <label for="status">Status</label>
    <input type="text" name="status" placeholder="Abierto">
  </div>
  
  <div class="form-group">
      <label for="category">Category</label>
      <select name="category">
        <% @category.each do |category| %>
          <option value="<%= category.category %>"><%= category.category %></option>
        <% end %>
      </select>
  </div>

  <div class="form-group">
      <label for="type">Type</label>
      <select name="type">
        <% @type.each do |type| %>
          <option value="<%= type %>"><%= type %></option>
        <% end %>
      </select>
  </div>

  <div class="form-group">
    <label for="commune">Commune</label>
    <input type="text" name="commune">
  </div>

  <div class="form-group">
    <label for="distrit">Distrit</label>
    <input type="text" name="distrit">
  </div>

  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address">
  </div>

  <div class="form-group">
    <label for="address_number">Address number</label>
    <input type="text" name="address_number">
  </div>

  <div class="form-group">
    <label for="channel">Channel</label>
    <select name="channel">
      <option>App</option>
      <option>Web</option>
      <option>147</option>
      <option>Commune</option>
    </select>
  </div>
  
  <div class="form-group">
    <label for="gender">Gender</label>
    <select name="gender">
      <option>masculino </option>
      <option>femenino</option>
      <option>otro</option>
    </select>
  </div>

  <div class="form-group">
    <label for="date">Open Date</label>
    <input type="number" placeholder="<%= @time %>" readonly>
  </div>

  <div class="form-group">
    <label for="close_date">Close Date</label>
    <input type="date" name="close_date" readonly>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>

<hr class="my-4">

<div class="row  justify-content">
  <div class="col-6" >
    <p><a class="btn btn-primary" href='/'>Back Home</a></p>
  </div>
</div>
